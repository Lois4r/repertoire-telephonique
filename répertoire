# Répertoire téléphonique

def afficher_repertoire(repertoire):
    print("\nRépertoire téléphonique :")
    for nom, numero in repertoire.items():
        print(f"{nom} : {numero}")
    print()

def ajouter_contact(repertoire):
    nom = input("Entrez le nom du contact : ")
    numero = input("Entrez le numéro de téléphone : ")
    repertoire[nom] = numero
    print(f"{nom} a été ajouté au répertoire.\n")

def rechercher_contact(repertoire):
    nom = input("Entrez le nom à rechercher : ")
    if nom in repertoire:
        print(f"Numéro de {nom} : {repertoire[nom]}\n")
    else:
        print(f"{nom} n'est pas dans le répertoire.\n")

def supprimer_contact(repertoire):
    nom = input("Entrez le nom à supprimer : ")
    if nom in repertoire:
        del repertoire[nom]
        print(f"{nom} a été supprimé du répertoire.\n")
    else:
        print(f"{nom} n'existe pas.\n")

def menu():
    repertoire = {}
    while True:
        print("1. Afficher le répertoire")
        print("2. Ajouter un contact")
        print("3. Rechercher un contact")
        print("4. Supprimer un contact")
        print("5. Quitter")
        choix = input("Choisissez une option : ")

        if choix == "1":
            afficher_repertoire(repertoire)
        elif choix == "2":
            ajouter_contact(repertoire)
        elif choix == "3":
            rechercher_contact(repertoire)
        elif choix == "4":
            supprimer_contact(repertoire)
        elif choix == "5":
            print("Au revoir !")
            break
        else:
            print("Choix invalide. Essayez encore.\n")

# Lancer le programme
menu()
